#include <iostream>
using namespace std;

int main() {
    double num1, num2, num3,mid,smallest,largest;

    cout << "Enter three numbers: ";
    cin >> num1 >> num2 >> num3;

   if( largest = num1){
       if(num2>num3){
          mid =num2;
          smallest= num3;
          }
       else{
          mid = num3;
          smallest = num2;
          }
    }

    if (num2 > largest) {
        largest = num2;
        if(num1>num3){
           mid=num1;
           smallest = num3;
          }
        else {
           mid = num3;
           smallest= num1;
          }
    }

    if (num3 > largest) {
        largest = num3;
        if(num1>num2){
           mid=num1;
           smallest = num2;
          }
        else {
           mid = num2;
           smallest= num1;
          }
    }

    cout << smallest<<","<< mid<<"," << largest ;
    return 0;
}

